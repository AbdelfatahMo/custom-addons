<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- View slide.channel form -->
    <record id="view_slide_channel_form" model="ir.ui.view">
        <field name="name">view.slide.channel.form</field>
        <field name="model">slide.channel</field>
        <field name="inherit_id" ref="website_slides.view_slide_channel_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='options']//group//group" position="inside">
                <field name="city_field" widget="boolean_toggle"/>
                <field name="nationality_field" widget="boolean_toggle"/>
                <field name="gender_field" widget="boolean_toggle"/>
                <field name="hadf_support_field" widget="boolean_toggle"/>
                <field name="work_field" widget="boolean_toggle"/>
                <field name="student_field" widget="boolean_toggle"/>
                <field name="general_abilities_field" widget="boolean_toggle"/>
                <field name="high_school_percentage_field" widget="boolean_toggle"/>
                <field name="name_to_url" />
                <field name="registration_application_url" widget="url"/>
                <field name="current_registration_application" />
                <field name="max_registration_application" />
            </xpath>
        </field>
    </record>

</odoo>
